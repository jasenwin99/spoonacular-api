<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <link rel="stylesheet" href="/stylesheets/base.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Information</title>
</head>

<body>
    <div class="bg" style="background-image: url('<%=data.image%>');">
    </div>
    <main>
        <header>
            <div class="page-title" style="text-align: center;">
                Recipedia
            </div>
            <div class="control">
                <button class="button is-primary" id="back_button" style="width: 150px">Back</button>
            </div>
        </header>
        <div class="view-card">
            <div class="card-hero">
                <div class="image">
                    <img src="<%=data.image%>">
                </div>
                <div class="info-section">
                    <h1>
                        <%=data.title%>
                    </h1>
                    <p class="sum">
                        <%=data.summary%>
                    </p>
                </div>
            </div>
            <div class="info-cards">
                <div>
                    <div class="info-header">Servings</div>
                    <div>
                        <%=data.servings%>
                    </div>
                </div>
                <div>
                    <div class="info-header">Ready in</div>
                    <div>
                        <%=data.readyInMinutes%> minutes
                    </div>
                </div>
                <div>
                    <div class="info-header">Vegetarian</div>
                    <div>
                        <%=data.vegetarian?"✅":"❌"%>
                    </div>
                </div>
                <div>
                    <div class="info-header">Vegan</div>
                    <div>
                        <%=data.vegan?"✅":"❌"%>
                    </div>
                </div>
                <div>
                    <div class="info-header">Gluten Free</div>
                    <div>
                        <%=data.glutenFree?"✅":"❌"%>
                    </div>
                </div>
                <div>
                    <div class="info-header">Dairy Free</div>
                    <div>
                        <%=data.dairyFree?"✅":"❌"%>
                    </div>
                </div>
            </div>
            <div class="content">
                <h2>Ingredients:</h2>
                <ul class="ing">
                    <% let ingredients=data.extendedIngredients; 
                    for(let i=0;i<ingredients.length;i++){ 
                        let temp=ingredients[i]; 
                        let measure=temp.measures.metric; %>
                        <li>
                            <%-"<b>" + measure.amount + " " + measure.unitShort + "</b> " + temp.nameClean%>
                        </li>
                        <%}%>
                </ul>
                <h2>How to prepare:</h2>
                <ol class="ing">
                    <% let steps=data.analyzedInstructions[0].steps; 
                    for(let i=0;i<steps.length;i++){ 
                        let temp=steps[i];
                        %>
                        <li>
                            <%-"<p>" + temp.step + "</p>"%>
                        </li>
                        <%}%>
                </ol>
            </div>
        </div>
        <div class="content main">
            <div class="columns">
                <div class="column is-two-fifths">

                </div>
                <div class="column">

                </div>
            </div>

        </div>
    </main>
    <script src="/javascripts/view.js">

    </script>
</body>

</html>